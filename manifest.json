{
  "manifest_version": 3,
  "name": "ВебАрхивист",
  "version": "0.3.4.5",
  "description": "Позволяет автоматизировать скачивание изображений из различных сервисов",
"permissions": [
    "webRequest",
    "downloads",
    "activeTab",
    "tabs",
    "notifications",
	"https://afterliferus.github.io/*"
  ],

  "host_permissions": [
    "https://ya.ru/archive/*",
    "https://yandex.ru/archive/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
  {
	"resources": ["jszip.min.js"],
	"matches": ["<all_urls>"]
  }
],
  "content_scripts": [
    {
    "matches": [
      "https://ya.ru/archive/*",
      "https://yandex.ru/archive/*",
      "https://goskatalog.ru/portal/*",         
      "https://catalog.shm.ru/*",
	  "https://www.prlib.ru/item/*"
    ],
      "js": ["contentScript.js"],
	  "run_at": "document_idle"
    }
  ]
}